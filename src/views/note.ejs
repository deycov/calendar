<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
  <title>Calendario 2023</title>
</head>

<body>
  <h2 class="m-auto t-center"> Sus Notas </h2>


  <section class="container">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h3> Nota d√≠a <%= note.day %>
        </h3>
        <% if(data) { %>
          <form action="/v1/calendar/update/<%= note.day %>/<%= data.id %>" method="post">
            <div class="mb-3">
              <input type="text" name="title" placeholder="<%= data.title %>" class="form-group">
            </div>
            <div class="mb-3">
              <textarea name="description" class="form-group"><%= data.description %></textarea>
            </div>
            <button class="btn btn-success"> Editar nota </button>
          </form>
        <% }else{ %>
          <form action="/v1/calendar" method="post">
            <div class="mb-3">
              <input type="hidden" name="day" value="<%= note.day %>">
            </div>
            <div class="mb-3">
              <input type="text" name="title" placeholder="" class="form-group">
            </div>
            <div class="mb-3">
              <textarea name="description" class="form-group"></textarea>
            </div>
            <button class="btn btn-primary"> Guardar nota </button>
          </form>
        <% } %>
      </div>

      <% if(info) { %>
        <div class="col-md-6 m-auto">
          <h3> Notas agregadas </h3>
          <% info.forEach(el=>{ %>
            <div class="container-fluid">
              <h4>
                <%= el.title %>
              </h4>
              <p>
                <%= el.description %>
                <%= el.id %>
              </p>
            </div>
            <a class="btn btn-primary" href="/v1/calendar/edit/<%= note.day %>/<%= el.id %>"> Editar </a>
            <a class="btn btn-warning" href="/v1/calendar/delete/<%= note.day %>/<%= el.id %>"> Eliminar </a>
            <% }) %>
        </div>
        <% } %>

          <% if(data) { %>
            <div class="col-md-6 m-auto">
              <h3> Modifica la nota </h3>

              <div class="container-fluid">
                <h4>
                  <%= data.title %>
                </h4>
                <p>
                  <%= data.description %>
                </p>
              </div>
              <a class="btn btn-primary" href="/v1/calendar/edit"> editar </a>

            </div>
            <% } %>

    </div>
  </section>







  <script src="/js/scripts.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
</body>

</html>